@model AdminMoviesViewModel




<h1> Admin Movie List</h1>


<table class="table table-striped talbe-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Title</th>
            <th>Genres</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>@item.MovieId</td>
                <td><img src="/img/@item.ImageUrl" width="80" /></td>
                <td>@item.Title</td>
                <td>
                    <ul>
                        @foreach (var genre in item.Genres)
                        {
                            <li>@genre.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <a href="#" class="btn btn-primary btn-sm">Update</a>
                    <a href="#" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


