@model AdminGenreEditViewModel



<h1>Edit Genre</h1>
<br />


<form asp-controller="Admin" asp-action="GenreUpdate" method="post">
    <div class="row">
        <div class="col-md-3">
            <input type="hidden" name="GenreId" value="@Model.GenreId" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-md-9">
            <table class="table table-striped talbe-hover table-bordered">
                <thead>
                    <tr>
                        <th>Remove</th>
                        <th>#</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Movies)
                    {
                        <tr>
                            <td>
                                <input class="form-check-input" type="checkbox" name="movieIds" value="@item.MovieId" />
                            </td>
                            <td>@item.MovieId</td>
                            <td><img src="/img/@item.ImageUrl" width="80" /></td>
                            <td>@item.Title</td>
                            <td>
                                <a href="/admin/MovieUpdate/@item.MovieId" class="btn btn-primary btn-sm">Update</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>