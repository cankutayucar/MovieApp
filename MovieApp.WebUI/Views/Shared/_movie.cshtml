@model Movie



<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="/img/@Model.ImageUrl" style="width:100px;" alt="@Model.Title" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p>
                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">Details</a>
                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.MovieId">Edit</a>
                </p>
            </div>
        </div>
    </div>
</div>






